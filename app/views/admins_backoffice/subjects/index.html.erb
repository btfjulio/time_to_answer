<h1>Assuntos/Áreas</h1>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Descrição</th>
            <th scope="col" style="text-align: center">
                <%= link_to new_admins_backoffice_subject_path, class:"btn btn-success btn-circle btn-sm text-center"  do %>
                    <i class="fa fa-plus"></i>
                <% end %>   
            </th>
        </tr>
    </thead>
    <tbody>
        <% @subjects.each do |subject| %>
            <tr>
            <th scope="row">  <%= subject.id %> </th>
            <td><%= subject.description %></td>
            <td style="width: 100px; text-align: center">
                <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-info btn-circle btn-sm"  do %>
                    <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to admins_backoffice_subject_path(subject), class:"btn btn-danger btn-circle btn-sm", data: { confirm: 'Deseja realmente deletar esse assunto?' }, method: :delete  do %>
                    <i class="fa fa-minus"></i>
                <% end %>
            </td>
            </tr>
        <% end %>
    </tbody>
    </table>
    <div class="d-flex justify-content-center">
        <%= paginate @subjects %>
    </div>
</div>