<h1><%= t('messages.listing', model: @admins.model_name.human(count:2)) %></h1>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col"> <%= translate_attribute(@admins, :email) %> </th>
            <th scope="col" style="text-align: center">
                <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle btn-sm text-center"  do %>
                    <i class="fa fa-plus"></i>
                <% end %>   
            </th>
        </tr>
    </thead>
    <tbody>
        <% @admins.each do |admin| %>
            <tr>
            <th scope="row">  <%= admin.id %> </th>
            <td><%= admin.email %></td>
            <td style="width: 100px; text-align: center">
                <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-info btn-circle btn-sm"  do %>
                    <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to admins_backoffice_admin_path(admin),
                     class:"btn btn-danger btn-circle btn-sm", 
                     data: { confirm: t('messages.confirm_with', item: admin.email.truncate(15)) }, 
                     method: :delete  do %>
                    <i class="fa fa-minus"></i>
                <% end %>
            </td>
            </tr>
        <% end %>
    </tbody>
    </table>
    <div class="d-flex justify-content-center">
        <%= paginate @admins %>
    </div>
</div>