<h1>Perguntas</h1>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Descrição</th>
            <th scope="col">Assunto</th>
            <th scope="col" style="text-align: center">
                <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle btn-sm text-center"  do %>
                    <i class="fa fa-plus"></i>
                <% end %>   
            </th>
        </tr>
    </thead>
    <tbody>
        <% @questions.each do |question| %>
            <tr>
            <th scope="row">  <%= question.id %> </th>
            <td><%= question.description.truncate(50) %></td>
            <td><%= question.subject.description.truncate(40) %></td>
            <td style="width: 100px; text-align: center">
                <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-info btn-circle btn-sm"  do %>
                    <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to admins_backoffice_question_path(question), class:"btn btn-danger btn-circle btn-sm", data: { confirm: 'Deseja realmente deletar essa pergunta?' }, method: :delete  do %>
                    <i class="fa fa-minus"></i>
                <% end %>
            </td>
            </tr>
        <% end %>
    </tbody>
    </table>
    <div class="d-flex justify-content-center">
        <%= paginate @questions %>
    </div>
</div>