<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <h1>Altere sua senha</h1>
          <div>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Nova Senha", class:"form-control" %>
          </div>
          <div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmar Nova Senha", class:"form-control" %>
          </div>
          <div class="d-flex justify-content-center">
            <%= f.submit "Mudar Senha", class:"btn btn-danger submit m-0" %>
          </div>
          <div class="clearfix"></div>
            <br />
            <div>
              <h1><i class="fa fa-paw"></i> Save Whey</h1>
              <p>Â©2020 All Rights Reserved. Privacy and Terms</p>
            </div>
          </div>
      <% end %>
      </section>
    </div>
  </div>
</div>
